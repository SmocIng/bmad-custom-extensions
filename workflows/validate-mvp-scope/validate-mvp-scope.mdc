name: validate-mvp-scope
description: "Validate MVP scope after PRD creation to ensure it is testable within 2 weeks and can validate hypotheses with minimal features. This workflow helps prevent scope creep and ensures MVP focuses on hypothesis validation rather than feature completeness."
author: "BMad Custom"

# Important: This workflow should be executed after PRD creation and before Phase 3 (Solutioning).
# It validates that the MVP scope is appropriate for rapid hypothesis validation.

# Critical variables from config (reuse existing bmm resources)
config_source: "{project-root}/.bmad/bmm/config.yaml"
output_folder: "{config_source}:output_folder"
user_name: "{config_source}:user_name"
communication_language: "{config_source}:communication_language"
date: system-generated
sprint_artifacts: "{config_source}:sprint_artifacts"

# Workflow components (placed under .bmad-custom)
installed_path: "{project-root}/.bmad-custom/workflows/validate-mvp-scope"
instructions: "{installed_path}/instructions.md"
validation_report_template: "{installed_path}/validation-report-template.md"

# Variables and inputs
variables:
  prd_file: "{output_folder}/prd.md"
  product_brief_file: "{output_folder}/product-brief-*.md"
  hypothesis_validation_checklist: "{output_folder}/hypothesis-validation-checklist.md"
  validation_report_file: "{output_folder}/mvp-scope-validation-report.md"

# Reference to existing bmm resources
bmm_template_reference: "{project-root}/.bmad/bmm/workflows/2-planning/prd/template.md"

standalone: true
